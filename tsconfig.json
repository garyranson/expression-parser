{
  "version": "2.2.1",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include" : [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "work"
  ]
}